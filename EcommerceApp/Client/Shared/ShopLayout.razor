@inherits LayoutComponentBase
<style>
@@import url('https://fonts.googleapis.com/css2?family=Didact+Gothic&display=swap');
</style>
<div class="page">
    <main>
        <div style = "position: sticky; top: 0; background-color: #f7f7f7;font-family: 'Didact Gothic', sans-serif;">
            <div class="top-row px-2">
                <HomeButton />
                <Search />
                <UserButton />
                <CartCounter />
            </div>
        </div>
        
        <div style = "background-image: linear-gradient(180deg, rgb(44, 62, 80) 0%, rgb(52, 73, 94) 70%); font-family: 'Didact Gothic', sans-serif;">
            <div class="nav-menu">
                <ShopNavMenu />
            </div>
        </div>

        <article class="content px-2" style="width:80%;margin:auto;font-family: 'Didact Gothic', sans-serif;">
            @Body
        </article>
    </main>
</div>
<div>
    <br/>
    <footer class="border-top footer text-muted text-center" style="margin:auto">
        <div class="footer">
            About Us   &nbsp;|&nbsp;   Terms & Conditions   &nbsp;|&nbsp;   Privacy   &nbsp;|&nbsp;   California Privacy Rights   &nbsp;|&nbsp;   Copyright © 2022
        </div>
    </footer>
</div>
